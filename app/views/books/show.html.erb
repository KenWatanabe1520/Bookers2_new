<%= flash[:notice] %>

<div class="container">
  <div class="row">
    <!--左側の部分-->
    <%= render "left_list", user: @user, book: @new_book %>
    <!--右側の一覧表示部分-->
    <div class=" col-md-8 offset-md-1">
      <h2>Book detail</h2>
      <table style="width:100%">
        <thead>
          <tr class="border-top border-2">
            <th class="p-2 col-md-2"></th>
            <th class="p-2 col-md-4">Title</th>
            <th class="p-2 col-md-4">Opinion</th>
            <% if @user == current_user %>
              <th class="p-2 col-md-1"></th>
              <th class="p-2 col-md-1"></th>
            <% end %>
          </tr>
        </thead>
        <tbody>
          <tr class="border-top border-2">
            <td class="p-2">
              <%= link_to user_path(@book.user_id) do%>
                <%= image_tag @book.user.get_profile_image(100,100) %>
                </br>
                <%= @book.user.name %>
              <% end %>
            </td>
            <td class="p-2" %>
              <%= link_to book_path(@book.id) do %>
                <%= @book.title %>
              <% end %>
            </td>
            <td class="p-2"><%= @book.body %></td>
            <% if @user == current_user %>
              <td class="p-2">
                <%= link_to edit_book_path(@book) do %>
                  <button type="button" class="btn btn-success">Edit</button>
                <% end %>
              </td>
              <td class="p-2">
                <%= link_to book_path(@book), method: :delete, "data-confirm" => "Are you sure?" do %>
                  <button type="button" class="btn btn-danger">Destroy</button>
                <% end %>
              </td>
            <% end %>
          </tr>
        </tbody>
      </table>
    </div>
  </div>
</div>
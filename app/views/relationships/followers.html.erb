<%= flash[:notice] %>
<div class="container">
  <div class="row">
    <!--左側の部分-->
    <%= render "books/left_list", user: @user, book: @book %>
    <!--右側の一覧表示部分-->
    <div class=" col-md-8 offset-md-1">
      <h2>Follower Users</h2>
      <table style="width:100%">
        <thead>
          <tr class="border-top border-2">
            <th class="p-2 col-md-2">Image</th>
            <th class="p-2 col-md-3">name</th>
            <th class="p-2 col-md-3"></th>
            <th class="p-2 col-md-3"></th>
            <th class="p-2 col-md-1"></th>
          </tr>
        </thead>
        <% @users.each do |user| %>
        <tbody>
          <tr class="border-top border-2">
            <td class="p-2">
              <%= image_tag user.get_profile_image(100,100) %>
            </td>
            <td class="p-2" %>
              <%= user.name %>
            </td>
            <td class="p-2">
              フォロー数:<%= user.followings.count %>
            </td>
            <td class="p-2">
              フォロワー数:<%= user.followers.count %>
            </td>
            <td class="p-2">
              <%= link_to "Show", user_path(user) %>
            </td>
          </tr>
        </tbody>
        <% end %>
      </table>
    </div>
  </div>
</div>
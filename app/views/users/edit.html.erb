<%= flash[:notice] %>
<% if @user.errors.any? %>
  <%= @user.errors.count %>errors prohibited this obj from being saved:
  <ul>
    <% @user.errors.full_messages.each do |message| %>
      <li><%= message %></li>
    <% end %>
  </ul>
<% end %>

<div class="container">
  <div class="row">
    <div class="col-md-8 mx-auto">
      <h1>
        User info
      </h1>
      <%= form_with model: @user do |f| %>
        <p>Name</p>
        <%= f.text_field :name, class: "col-md-12" %>
        <p>Image</p>
        <%= f.file_field :profile_image, placeholder: "プロフィール画像", accept: "image/*", class: "col-md-12" %>
        <p>Introduction</p>
        <%= f.text_area :introduction, class: "col-md-12" %>
        </br>
        <%= f.submit "Update User", class: "btn btn-secondary" %>
      <% end %>
    </div>
  </div>
</div>